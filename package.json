{
  "name": "banco-suenos-server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon",
    "clean": "rimraf build",
    "build": "npm run clean && tsc",
    "start": "cross-env NODE_ENV=production npm run build && node build/app.js",
    "watch-node": "nodemon build/app.js",
    "watch-ts": "tsc -w",
    "deploy": "git add . && git commit -m Heroku && git push -u origin master",
    "lint": "npx eslint src/**/*.ts --ext .ts",
    "lint:format": "eslint src/** --ext .ts --fix",
    "prettier": "prettier src/** --write",
    "prettier-format": "prettier --config .prettierrc src/** --write",
    "prettier-watch": "onchange src/**/*.ts -- prettier --write {{changed}}",
    "test": "cross-env NODE_ENV=test jest --env=node --passWithNoTests --verbose",
    "test:dev": "cross-env NODE_ENV=test jest --watchAll"
  },
  "jest": {
    "testEnviroment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint"
    }
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "cross-env": "^7.0.3",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.7",
    "morgan": "~1.9.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^6.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.1",
    "@types/jest": "^27.0.1",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.6.0",
    "@types/passport": "^1.0.7",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/passport-local-mongoose": "^4.0.15",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "bcrypt": "^5.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "onchange": "^6.1.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.5",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5"
  }
}
